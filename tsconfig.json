{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "types": ["node", "reflect-metadata"],
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "node_modules",
      "test/**/*.test.ts"
    ]
}